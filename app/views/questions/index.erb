<div class="container">
  <% if current_user %>
    <a id='add_question' href='#'>Ask a question</a>
      <form id="submit_question" action="/questions" method="post">
        <input class="new-question-title" type="text" name="question[title]" placeholder="title"><br>
        <textarea class="new_question" name="question[body]" placeholder="your question goes here"></textarea><br>
        <input class="button" type="submit" value="ask">
        <input class="button cancel-question" type='button' value='cancel'>
      </form>
  <%end%>
  <% if !(@questions.empty?)%>
    <h2>Questions</h2>
    <ul class="white lighten-3">
      <% @questions.each do |question| %>
        <div class="center question-wrapper">
          <div class="middle-stat grey-text">
            <li class="green-text"><%= vote_num(question) %></li>
          </div>
          <div class="question-main">
            <li>
              <p><a class="grey-text text-darken-3 question-title" href='/questions/<%= question.id %>'><%= question.title %></a></p>
              <br>
              <div class='row'>
                <div class="grey-text text-darken-3 col m4"> Views: <span class="green-text"><%= question.views %></span></div>
                <div class="grey-text text-darken-3 col m4"> Answers: <span class="green-text"><%= question.answers.length %></span></div>
                <div class="grey-text text-darken-3 col m4">asked by <a class="question-author" href='/users/<%= question.user.id %>'><%= question.user.username %></a> on <%= question.created_at.strftime("%b-%d-20%y") %></div>
              </div>
            </li>
          </div>
        </div>
      <% end %>
    </ul>
  <% end %>
</div>
