<h5>Top voted</h5>
<% if @questions%>
  <ul class="white lighten-3">
    <% @questions.each do |question| %>
      <div class="center question-wrapper">
        <div class="middle-stat grey-text">
          <li class="green-text"><%= vote_num(question) %></li>
        </div>
        <div class="question-main">
          <li>
            <p><a class="grey-text text-darken-3 question-title" href='/questions/<%= question.id %>'><%= question.title %></a></p><br>
            <span class="grey-text text-darken-3 question-date">asked by <a class="question-author" href='/users/<%= question.user.id %>'><%= question.user.username %></a> on <%= question.created_at.strftime("%b-%d-20%y") %></span>
          </li>
        </div>
        <div class="grey-text text-darken-3 question-stats">
          <li>Views: <span class="green-text"><%= question.views %></span></li>
          <li>Answers: <span class="green-text"><%= question.answers.length %></span></li>
        </div>
      </div>
    <% end %>
  </ul>
<% end %>
